    <script>
        // Mobile Menu Toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Close mobile menu when a link is clicked
            const mobileMenuLinks = mobileMenu.querySelectorAll('a');
            mobileMenuLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                });
            });
        }

        // Animate "How it works" progress line on scroll
        const progressLine = document.getElementById('progress-line');
        const howItWorksSection = document.getElementById('how-it-works');
        
        function animateLine() {
            if (!howItWorksSection) return; // Guard clause

            const sectionTop = howItWorksSection.getBoundingClientRect().top;
            const windowHeight = window.innerHeight;
            
            if (sectionTop < windowHeight * 0.75) {
                // FIX: Make the selector more specific to target only the step divs inside the grid
                const steps = howItWorksSection.querySelectorAll('.grid > .text-center');
                
                steps.forEach((step, index) => {
                    setTimeout(() => {
                        const circle = step.querySelector('.relative > div');
                        if (circle) { // Guard clause for circle
                            circle.classList.remove('border-gray-800', 'text-white');
                            circle.classList.add('border-brand-primary', 'text-brand-secondary');
                        }
                        
                        // Update line progress
                        if (progressLine && index > 0) { // Guard clause for progressLine
                            progressLine.style.width = `${(index / (steps.length - 1)) * 100}%`;
                            progressLine.style.transition = 'width 0.5s ease-in-out';
                        }

                    }, index * 300);
                });
                window.removeEventListener('scroll', animateLine); // Animate only once
            }
        }
        
        if (howItWorksSection) { // Only add listener if section exists
            window.addEventListener('scroll', animateLine);
        }

        // Typewriter Effect
        document.addEventListener('DOMContentLoaded', function() {
            const typewriterElement = document.getElementById('typewriter-text');
            if (typewriterElement) {
                const phrases = [
                    "We automate everything.",
                    "We are the best.",
                    "We are the Skilliest."
                ];
                let phraseIndex = 0;
                let charIndex = 0;
                let isDeleting = false;
                const typingSpeed = 25;
                const deletingSpeed = 15;
                const delayBetweenPhrases = 1200;

                function type() {
                    const currentPhrase = phrases[phraseIndex];
                    if (isDeleting) {
                        // Deleting
                        typewriterElement.textContent = currentPhrase.substring(0, charIndex - 1);
                        charIndex--;
                        if (charIndex === 0) {
                            isDeleting = false;
                            phraseIndex = (phraseIndex + 1) % phrases.length;
                            setTimeout(type, 500); // Pause before typing next phrase
                        } else {
                            setTimeout(type, deletingSpeed);
                        }
                    } else {
                        // Typing
                        typewriterElement.textContent = currentPhrase.substring(0, charIndex + 1);
                        charIndex++;
                        if (charIndex === currentPhrase.length) {
                            isDeleting = true;
                            setTimeout(type, delayBetweenPhrases); // Pause at the end of the phrase
                        } else {
                            setTimeout(type, typingSpeed);
                        }
                    }
                }
                setTimeout(type, 500); // Start the effect
            }
        });

    </script>
</body>
